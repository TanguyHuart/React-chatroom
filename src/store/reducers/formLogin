import { PayloadAction, createSlice } from '@reduxjs/toolkit';

const initialState = {
  loginFormIsVisible: true,
};

const fromLoginSlice = createSlice({
  name: 'formLogin',
  initialState,
  reducers: {
    changeLoginState(state) {
      state.loginFormIsVisible = !state.loginFormIsVisible;
    },
  },
});
